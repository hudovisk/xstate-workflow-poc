{
  "compilerOptions": {
    "lib": ["es2017"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "types": ["node", "mocha", "chai-as-promised", "sinon-chai"]
  },
  "exclude": ["node_modules"]
}
